<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Splash">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0A73C1"
        android:orientation="horizontal"
        android:gravity="end"
        android:id="@+id/top_box"
    >
        <View
            android:layout_width="20dp"
            android:layout_height="95dp"
            android:background="#FFEA00"
            android:id="@+id/first"/>

        <View
            android:layout_width="20dp"
            android:layout_height="200dp"
            android:background="#FAB412"
            android:id="@+id/second"/>
        <View
            android:layout_width="20dp"
            android:layout_height="150dp"
            android:background="#FFEF47"
            android:id="@+id/third"
            />
        <View
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:background="#FFA726"
            android:id="@+id/fourth"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0A73C1"
        android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/id_card"
            android:id="@+id/id_card_logo">
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0A73C1"
        android:layout_weight="1.5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/quando"
            android:gravity="center"
            android:text="'Unlock the Meaning Behind Your SA ID!'"
            android:textColor="@color/white" />

        </RelativeLayout>
</LinearLayout>